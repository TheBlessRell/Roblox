    Title = "Credits",
    Content = "Script made by Rell. Thank you for using The Shop!"
})

-- Log viewer
LogTab:CreateButton({
    Name = "Show Log",
    Callback = function()
        local logContent = table.concat(State.Log, "\n")
        Rayfield:CreateParagraph({
            Title = "Activity Log",
            Content = logContent
        })
    end
})

end
